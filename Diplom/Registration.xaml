<Window x:Class="Diplom.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        Title="Registration" Height="800" Width="1440">
    <Grid Background="#98A1FF">
        <!-- Круги на фоне -->
        <Ellipse Fill="#8B96FE" Width="365" Height="365" Opacity="0.4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30"/>
        <Ellipse Fill="#8B96FE" Width="200" Height="200" Opacity="0.4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="50"/>
        <Ellipse Fill="#8B96FE" Width="350" Height="350" Opacity="0.4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="80,40,40,0"/>
        <Ellipse Fill="#8B96FE" Width="265" Height="265" Opacity="0.4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,60"/>

        <!-- Белая панель -->
        <Border Width="800" Height="600" Background="White" CornerRadius="20"
            HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Регистрация" FontSize="80" FontWeight="Regular" Foreground="#7674CF" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Поля для ввода -->
                <StackPanel Height="275" Margin="0,10,0,0" HorizontalAlignment="Center" Width="550">
                    <TextBox Width="550"  Height="30" Margin="0,5,0,5" BorderBrush="LightGray"/>
                    <TextBox Width="550" Height="30" Margin="0,24,0,5" BorderBrush="LightGray"/>
                    <TextBox Width="550" Height="30" Margin="0,24,0,5" BorderBrush="LightGray"/>
                    <PasswordBox Width="550" Height="30" Margin="0,24,0,5" BorderBrush="LightGray"/>
                    <TextBox Width="550" Height="30" Margin="0,24,0,5" BorderBrush="LightGray"/>
                </StackPanel>
               

                <!-- Чекбоксы -->
                <StackPanel Orientation="Horizontal" Margin="105,10,0,10">
                    <TextBlock Text="Пол" FontSize="20" Foreground="Gray" VerticalAlignment="Bottom" Margin="0,0,10,0"/>
                    <CheckBox VerticalAlignment="Bottom" Content="Мужской" Foreground="Gray"/>
                    <CheckBox VerticalAlignment="Bottom" Content="Женский" Foreground="Gray" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Кнопка регистрации -->
                <Button Margin="0,20,0,0" Content="Зарегистрироваться" Height="40" Background="#6F79F9" Foreground="White" 
                    FontSize="20"  HorizontalAlignment="Center" Width="250"/>

                <!-- Уже есть аккаунт -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Уже есть аккаунт?" Foreground="Gray"/>
                    <TextBlock MouseDown="TextBlock_MouseDown" Text="Войти" Foreground="#5D55C6" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

</Window>
